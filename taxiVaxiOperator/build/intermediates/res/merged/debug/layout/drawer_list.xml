<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/item_icon"
        android:paddingLeft="@dimen/drawer_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/text"
        android:ellipsize="end"
        android:id="@+id/item_text"
        android:paddingLeft="@dimen/drawer_text_with_icon"
        android:paddingRight="@dimen/drawer_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />
    <TextView
        android:textColor="@color/google_white"
        android:id="@+id/item_new"
        android:padding="3.0dip"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/drawer_right"
        android:layout_alignBaseline="@id/item_text"
        android:layout_alignParentRight="true" />

